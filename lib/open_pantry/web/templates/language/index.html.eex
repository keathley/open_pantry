<h2>Listing languages</h2>

<table class="table">
  <thead>
    <tr>
      <th>Iso code</th>
      <th>English name</th>
      <th>Native name</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for language <- @languages do %>
    <tr>
      <td><%= language.iso_code %></td>
      <td><%= language.english_name %></td>
      <td><%= language.native_name %></td>

      <td class="text-right">
        <%= link "Show", to: language_path(@conn, :show, language), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: language_path(@conn, :edit, language), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: language_path(@conn, :delete, language), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New language", to: language_path(@conn, :new) %>
